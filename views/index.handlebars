						    <form action="/update/{{this.id}}?_method=PUT" method="POST">
						        <input type="hidden" name="id" value="{{this.id}}">
						        <button type="submit">Devour It</button>
					      	</form>
					      	</p>
					  	</li>
					 {{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-lg-6">
			<ul>
				{{#each burger}}
					{{#if devoured}}
						<li>
							<p>{{this.id}} {{this.burger_name}} </p>
						</li>
					{{/if}}
				{{/each}}
			</ul>

		</div>
	</div>


